{{#each erros}}

<div class="alert alert-danger">{{texto}}</div>

{{/each}}

<h3>Nova Postagem:</h3>

<div class="card">
    <div class="card-body">
<form action="/admin/postagens/nova" method="POST">
    <label for="nome">Titulo:</label>
    <input name="titulo" type="text" id="titulo" placeholder="Titulo da postagem" class="form-control">
    <label for="nome">Descrição:</label>
    <input name="descricao" type="text" id="descricao" placeholder="Descrição da postagem" class="form-control">
    <label for="slug">Slug:</label>
    <input type="text" name="slug" id="slug" placeholder="Slug da postagem" class="form-control">
    <label for="slug">Categoria:</label>
    <select name="categoria" class="custom-select">
        {{#each categorias}}
            <option value="{{_id}}">
                {{nome}}
            </option>
        {{else}}
            <option value="0">Nenuma categoria registrada</option>
        {{/each}}
    </select>
    <label for="conteudo">Conteúdo</label>
    <textarea name="conteudo" class="form-control" placeholder="Conteúdo da postagem" class="mt-3"></textarea><br>
    <Button type="submit" class="btn btn-success mt-4" >Criar Postagem</Button>
</form>
</div>
</div>